{
  "name": "creeper-pay",
  "version": "1.0.0",
  "description": "A simple nodejs + express + braintree payment server.",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "npm i && npm run build:ts && npm start",
    "build:ts": "tsc",
    "dev": "env-cmd -f .env nodemon --watch 'src/**/*' --watch 'public/**/*.(js|css)' --watch 'templates/**/*.hbs' -e ts,js,json,hbs,css --exec 'ts-node' ./src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/s.casatorres/creeper-pay.git"
  },
  "author": "Sergio Casatorres",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/s.casatorres/creeper-pay/issues"
  },
  "homepage": "https://gitlab.com/s.casatorres/creeper-pay#readme",
  "dependencies": {
    "braintree": "^2.22.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase": "^7.11.0",
    "firebase-admin": "^8.10.0",
    "got": "^10.6.0",
    "hbs": "^4.1.0",
    "helmet": "^3.21.3",
    "validator": "^12.2.0"
  },
  "devDependencies": {
    "@types/braintree": "^2.22.0",
    "@types/express": "^4.17.3",
    "@types/helmet": "0.0.45",
    "@types/node": "^13.9.1",
    "env-cmd": "^10.1.0",
    "nodemon": "^2.0.2",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.3"
  }
}
