{{!-- Card component --}}
<div class="card z-depth-2">
  <div class="card-content">
    <span class="card-title center-align black-text">Signup</span>
    {{!-- Username --}}
    <div class="row">
      <div class="input-field col s12">
        <i class="material-icons prefix">account_circle</i>
        <input
          id="username"
          name="username"
          type="text"
          class="validate"
          required
          minlength="3"
        >
        <label for="username">Username</label>
        <span
          id="username-helper-text"
          class="helper-text"
        >Remember! Must be the same as your minecraft username!</span>
      </div>
    </div>
    {{!-- Email --}}
    <div class="row">
      <div class="input-field col s12">
        <i class="material-icons prefix">alternate_email</i>
        <input
          id="email"
          name="email"
          type="email"
          class="validate"
          required
        >
        <label for="email">Email</label>
        <span
          id="email-helper-text"
          class="helper-text"
        ></span>
      </div>
    </div>
    {{!-- Password --}}
    <div class="row">
      <div class="input-field col s12">
        <i class="material-icons prefix">vpn_key</i>
        <input
          id="password"
          name="password"
          type="password"
          class="validate"
          minlength="6"
          required
        >
        <label for="password">Password</label>
        <span
          id="password-helper-text"
          class="helper-text"
        ></span>
      </div>
    </div>
  </div>
  <div class="card-action center-align">
    <button
      id="submit-button"
      name="submit-button"
      class="btn waves-effect waves-light green darken2"
      type="submit"
    >Signup
      <i class="material-icons right">send</i>
    </button>
  </div>
</div>
</form>
</div>